<% layout("layouts/boilerplate") -%>

<div class="row">
  <div class="col-8 offset-2">
    <h2 class="mb-4 mt-4">CREATE NEW LISTING</h2>

    <form method="POST" action="/listings" novalidate class="needs-validation">
      <!-- TITLE -->
      <div class="mb-3">
        <label for="title" class="form-label"><b>Title</b></label>
        <input
          type="text"
          id="title"
          name="listing[title]"
          placeholder="Enter title"
          class="form-control"
          required
          value="<%= typeof listing !== 'undefined' ? listing.title || '' : '' %>"
        />
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label for="description" class="form-label"><b>Description</b></label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        >
<%= typeof listing !== 'undefined' ? listing.description || '' : '' %></textarea
        >
        <div class="invalid-feedback">Please enter a description.</div>
      </div>

      <div class="row">
        <!-- PRICE -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label"><b>Price</b></label>
          <input
            type="number"
            id="price"
            name="listing[price]"
            placeholder="Enter price"
            class="form-control"
            required
            min="0"
            step="0.01"
            value="<%= typeof listing !== 'undefined' ? listing.price || '' : '' %>"
          />
          <div class="invalid-feedback">Please enter a price.</div>
        </div>

        <!-- COUNTRY -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label"><b>Country</b></label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            placeholder="Enter country"
            class="form-control"
            required
            value="<%= typeof listing !== 'undefined' ? listing.country || '' : '' %>"
          />
          <div class="invalid-feedback">Please enter a country.</div>
        </div>
      </div>

      <!-- LOCATION -->
      <div class="mb-3">
        <label for="location" class="form-label"><b>Location</b></label>
        <input
          type="text"
          id="location"
          name="listing[location]"
          placeholder="Enter location"
          class="form-control"
          required
          value="<%= typeof listing !== 'undefined' ? listing.location || '' : '' %>"
        />
        <div class="invalid-feedback">Please enter a location.</div>
      </div>

      <!-- IMAGE -->
      <input
        type="url"
        id="image"
        name="listing[image]"
        placeholder="Enter image URL"
        class="form-control"
        pattern="https?://.*"
        value="<%= typeof listing !== 'undefined' ? listing.image || '' : '' %>"
      />
      <div class="invalid-feedback">
        Please enter a valid image URL (starting with http:// or https://)
      </div>

      <button class="btn btn-dark mt-3" type="submit">Create Listing</button>
    </form>
  </div>
</div>
